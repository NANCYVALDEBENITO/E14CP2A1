<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @company.name %>
</p>
<%= form_with(model: [ @company, @employee ]) do |form| %>
	<%= form.hidden_field :company_id, value: @company.id %>
   	<%= form.label :first_name, "First Name" %>
 	<%= form.text_field :first_name %>
 	<%= form.label :last_name, "Last Name" %>
 	<%= form.text_field :last_name %>
 	<%= form.label :email, "Email" %>
 	<%= form.text_field :email %>
 	<%= form.label :area, "Area" %>
 	<%= form.select :area_id, Area.pluck(:name, :id) %>
 	<%= form.submit "Send" %>
<% end %>

<table>
	<tr>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Email</th>
		<th>Area</th>
	</tr>
	<% @company.employees.each do |employee| %>
	
	<tr> 
		<td><%= employee.first_name %> </td>
		<td><%= employee.last_name %> </td>
		<td><%= employee.email %> </td>
		<td><%= employee.area.name %> </td>
		<td><%= link_to 'Delete', company_employee_path(@company,employee), method: :delete %></td>
		
	</tr>

	<% end %>
		
</table>

<%= link_to 'Edit', edit_company_path(@company) %> |
<%= link_to 'Back', companies_path %>
